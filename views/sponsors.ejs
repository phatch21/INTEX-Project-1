    /* General Styling */
    body {
      font-family: 'Roboto', sans-serif;
      color: #333;
      line-height: 1.6;
      margin: 0;
      padding: 0;
    }
 
 
    /* Sponsor Section */
    .sponsor-section {
      display: flex;
      justify-content: center;
      padding: 40px 20px;
    }
 
    .sponsor-card {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      padding: 20px;
      background-color: #f9f9f9;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 1200px;
      width: 100%;
    }
 
    .sponsor-title {
      font-size: 18px;
      font-weight: 500;
      color: #555;
      margin-bottom: 10px;
      text-align: center;
    }
 
    /* New Heading for the Sponsors Section */
    .sponsor-card h1 {
      grid-column: span 4;
      text-align: center;
      font-size: 36px;
      font-weight: 700;
      color: #333;
      margin-bottom: 30px;
    }
 
    .sponsor {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #fff;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      height: 100%;
    }
 
    .sponsor img {
      max-width: 100%;
      max-height: 150px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      object-fit: contain;
      background-color: #f9f9f9;
      padding: 10px;
      transition: transform 0.3s ease-in-out;
    }
 
    .sponsor img:hover {
      transform: scale(1.05);
    }
 
    /* Ensures bottom row images are spaced the same as the top row */
    .bottom-row {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-column: span 4;
      gap: 20px;
    }
 
    .bottom-row .sponsor {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #fff;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
 
    .footer {
      text-align: center;
      font-size: 14px;
      color: #777;
      padding: 20px 0;
      border-top: 1px solid #ddd;
      background-color: #f8f8f8;
    }
 
    /* Mobile Responsiveness */
    @media screen and (max-width: 768px) {
      .sponsor-card {
        grid-template-columns: repeat(2, 1fr);
      }
      .bottom-row {
        grid-template-columns: 1fr 1fr;
      }
    }
 
    @media screen and (max-width: 480px) {
      .sponsor-card {
        grid-template-columns: 1fr;
      }
      .bottom-row {
        grid-template-columns: 1fr;
      }
    }
  </style>
