        <h1 style="text-align: center;">Create New Team Member</h1>
        <form action="/createTeamMember" method="POST" class="form-container">
            <label for="fname" >Enter Team Member's First Name:</label>
            <input type="text" id="fname" name="fname" >
            <br><br>
            <label for="lname" >Enter Team Member's Last Name:</label>
            <input type="text" id="lname" name="lname">
            <br><br>
            <label for="email">Enter Team Member's Email:</label>
            <input type="email" id="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}" required>
            <br><br>
            <label for="phone">Enter Team Member's Phone Number:</label>
            <input type="tel" id="phone" name="phone" pattern="\d{3}-\d{3}-\d{4}" placeholder="123-456-7890" required>
            <br><br>
            <label for="address">Enter Team Member's Address:</label>
            <input type="text" id="address" name="address" required>
            <br><br>
            <label for="city">Enter Team Member's City:</label>
            <input type="text" id="city" name="city" required>
            <br><br>
            <label for="state">Enter Team Member's State:</label>
            <select id="state" name="state" required>
                <option value="AL">Alabama</option>
                <option value="AK">Alaska</option>
                <option value="AZ">Arizona</option>
