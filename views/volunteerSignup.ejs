    <script>
        function toggleTeachCheckbox() {
            const canSew = document.getElementById("cansew").checked;
            const teachContainer = document.getElementById("teach-container");
            const willTeach = document.getElementById("willteach");

            // Show or hide the "Will you teach" checkbox container
            teachContainer.style.display = canSew ? "block" : "none";

            // Uncheck "Will you teach" checkbox if "Can you sew" is unchecked
            if (!canSew) {
                willTeach.checked = false;
            }
        }
    </script>
