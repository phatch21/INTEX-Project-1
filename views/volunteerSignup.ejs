    <form action="/addVolunteer" method="POST" class="form-container">
        <h1>Volunteer Signup</h1>
        <label for="firstname">First Name</label>
        <input type="text" id="firstname" name="firstname" required>

        <label for="lastname">Last Name</label>
        <input type="text" id="lastname" name="lastname" required>

        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" required>

        <label for="phone">Phone Number</label>
        <input type="text" id="phone" name="phone" placeholder="(123) 456-7890" required>

        <label for="willinghours">Volunteer Hours</label>
        <input type="number" id="willinghours" name="willinghours" min="1" max="40">

        <label for="heardhow">How Did You Hear About Us?</label>
        <input type="text" id="heardhow" name="heardhow" placeholder="Social media, friend, etc." required>

        <div class="checkbox-container">
            <label for="cansew">Do you know how to sew? Yes or No 
            <input type="checkbox" id="cansew" name="cansew" onchange="toggleTeachCheckbox()" value="true">
            </label>

            <div id="teach-container" class="hidden">
                <label for="willteach">Would you be willing to teach others how to sew? Yes or No 
                <input type="checkbox" id="willteach" name="willteach" value="true">
                </label>
            </div>

            <label for="havemachine">Do you own a sewing machine and can bring it to events? <br>Yes or No 
            <input type="checkbox" id="havemachine" name="havemachine" value="true">
            </label>
        </div>
        
        <button type="submit" class="lead-button">Submit</button>
    </form>
