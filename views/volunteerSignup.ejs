<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Signup</title>
    <style>
        /* Hide the "I am willing to teach" field by default */
        #teach-container {
            display: none;
            margin-left: 20px; /* Adjust as needed to align neatly */
        }
        /* Style the container to keep related checkboxes aligned */
        .checkbox-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
    </style>
    <script>
        function toggleTeachCheckbox() {
            const canSew = document.getElementById("cansew").checked;
            const teachContainer = document.getElementById("teach-container");

            // Show or hide the "I am willing to teach" checkbox based on "I can sew"
            teachContainer.style.display = canSew ? "block" : "none";
        }
    </script>
</head>
<body>
    <form action="/addVolunteer" method="POST">
        <label for="firstname">Enter your first name:</label>
        <input type="text" id="firstname" name="firstname" required>
        <br><br>
        <label for="lastname">Enter your last name:</label>
        <input type="text" id="lastname" name="lastname" required>
        <br><br>
        <label for="email">Enter your email:</label>
        <input type="email" id="email" name="email" required>
        <br><br>
        <label for="phone">Enter your phone number:</label>
        <input type="text" id="phone" name="phone" placeholder="(123) 456-7890" required>
        <br><br>
        <label for="willinghours">How many hours are you willing to volunteer for an event?</label>
        <input type="number" id="willinghours" name="willinghours" min="1" max="40">
        <br><br>
        <label for="heardhow">How did you hear about the Turtle Shelter Project?</label>
        <input type="text" id="heardhow" name="heardhow" placeholder="e.g., Social media, friend, etc." required>
        <br><br>
        <div class="checkbox-container">
            <label>
                <input type="checkbox" id="cansew" name="cansew" onchange="toggleTeachCheckbox()" value="true">
                I can sew
            </label>
            <div id="teach-container">
                <label>
                    <input type="checkbox" id="willteach" name="willteach" value="true">
                    I am willing to teach others how to sew
                </label>
            </div>
            <label>
                <input type="checkbox" id="havemachine" name="havemachine" value="true">
                I have a sewing machine
            </label>
        </div>
        <br><br>
        <button type="submit">Submit</button>
    </form>
</body>
</html>


