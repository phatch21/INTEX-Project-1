  <h1 style="text-align: center;">Edit Admin</h1>
  <form class="form-container" action="/editAdmin/<%= admin.admin_id %>" method="POST">
    <!-- First Name -->
    <label for="fname">First Name</label>
    <input type="text" id="fname" name="fname" value="<%= admin.fname %>" required>
    <!-- Last Name -->
    <label for="lname">Last Name</label>
    <input type="text" id="lname" name="lname" value="<%= admin.lname %>" required>
    <!-- Username -->
    <label for="username">Username</label>
    <input type="text" id="username" name="username" value="<%= admin.username %>" required>
    <!-- Submit Button -->
    <button type="submit">Save Changes</button>
  </form>
