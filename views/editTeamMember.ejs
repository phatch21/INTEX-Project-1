  <h1 style="text-align: center;">Edit Team Member</h1>
  <form class="form-container" action="/editTeamMember/<%= teammember.teammemberid %>" method="POST">
    <!-- First Name -->
    <label for="fname">First Name</label>
    <input type="text" id="fname" name="fname" value="<%= teammember.firstname %>" required>
    <!-- Last Name -->
    <label for="lname">Last Name</label>
    <input type="text" id="lname" name="lname" value="<%= teammember.lastname %>" required>
    <!-- Phone -->
    <label for="phone">Phone</label>
    <input type="tel" id="phone" name="phone" pattern="\d{3}-\d{3}-\d{4}" placeholder="123-456-7890" value="<%= teammember.phone %>" required>
    <!-- Email -->
    <label for="email">Email</label>
    <input type="email" id="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}" value="<%= teammember.email %>" required>
    <!-- Address -->
    <label for="address">Address</label>
    <input type="text" id="address" name="address" value="<%= teammember.address %>" required>
    <!-- City -->
    <label for="city">City:</label>
    <input type="text" id="city" name="city" value="<%= teammember.city %>" required>
    <!-- State -->
    <label for="state">State:</label>
    <select id="state" name="state" value="<%= teammember.state %>" required>
        <option value="AL">Alabama</option>
        <option value="AK">Alaska</option>
        <option value="AZ">Arizona</option>
        <option value="AR">Arkansas</option>
