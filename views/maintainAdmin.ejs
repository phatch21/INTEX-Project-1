<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Records</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* General Styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9; /* Soft light background */
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            font-size: 2em;
            margin: 20px 0;
            color: #333; /* Darker text for the title */
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            font-size: 14px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            border: 1px solid #ccc; /* Soft light border */
            padding: 10px;
            text-align: center;
            line-height: 1.4;
        }

        th {
            background-color: #dcdcdc; /* Soft gray header */
            color: #333;
            font-weight: bold;
        }

        td {
            color: #333;
        }

        button {
            padding: 8px 16px;
            font-size: 14px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
            background-color: #6c757d; /* Soft muted gray-green */
            color: white;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #5a6268; /* Darker gray-green for hover */
        }

        button:focus {
            outline: none;
        }

        /* Layout adjustments */
        form {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            table {
                width: 100%;
            }

            th, td {
                font-size: 12px;
                padding: 8px;
            }

            button {
                font-size: 12px;
                padding: 6px 12px;
            }

            h1 {
                font-size: 1.5em;
            }
        }

        @media (max-width: 480px) {
            th, td {
                font-size: 10px;
                padding: 6px;
            }

            button {
                font-size: 10px;
                padding: 4px 8px;
            }

            h1 {
                font-size: 1.2em;
            }
        }
    </style>
</head>
<body>

<h1>Admin Records</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        <% if (admins.length > 0) { %>
            <% admins.forEach(row => { %>
            <tr>
                <input type="hidden" value="<%= row.admin_id %>">
                <td><%= row.fname %></td>
                <td><%= row.lname %></td>
                <td><%= row.username %></td>
                <td>
                    <form action="/editAdmin/<%= row.admin_id %>" method="GET" style="display:inline;">
                        <button type="submit">Edit</button>
                    </form>
                    <form action="/deleteAdmin/<%= row.admin_id %>" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="4">No data available</td>
            </tr>
        <% } %>
    </tbody>
</table>

<form action="/createAdmin" method="GET">
    <button type="submit">Add Admin</button>
</form>

</body>
</html>

